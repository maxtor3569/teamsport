{% block stylesheets_include %}
    <style type="text/css">
        #customBtn, #customBtnYahoo, #customBtnFacebook {
            display: inline-block;
            background: #dd4b39;
            color: white;
            width: 250px;
            border-radius: 5px;
            white-space: nowrap;
            cursor: pointer
        }

        #customBtnYahoo {
            background: #7a0095;

        }

        #customBtnFacebook {
            background: #4c66a4;

        }

        #customBtn:hover, #customBtnYahoo:hover, #customBtnFacebook:hover {
            background: #e74b37;
            cursor: hand;
        }

        span.label {
            font-weight: bold;
        }

        span.icon {
            background: url('{{ asset('images/icons/btn_red_32.png') }}') transparent 5px 50% no-repeat;
            display: inline-block;
            vertical-align: middle;
            width: 35px;
            height: 35px;
            border-right: rgba(0, 0, 0, 0.2) 1px solid;
        }

        span.buttonText {
            display: inline-block;
            vertical-align: middle;
            padding-left: 15px;
            padding-right: 15px;
            font-size: 14px;
            font-weight: bold;
            /* Use the Roboto font that is loaded in the <head>
            font-family: 'Roboto',arial,sans-serif; */
        }
    </style>
{% endblock %}

