{# src/Sportimimi/userBundle/Resources/views/Page/rechercheProfil.html.twig #}
{% extends 'SportimimiuserBundle::layout.html.twig' %}

{% block title %}Danh Sách Các Môn Sự Kiện{% endblock %}

{% block stylesheets_include %}
	
{% endblock %}

{% block javascripts %}

{% endblock %}
{% block body %}
	<div class="innerLR">
                <h3 class="pull-left margin-none innerR">Danh Sách Các Môn Sự Kiện</h3>
                <a href="{{ path('AddEvent') }}" class="btn btn-primary pull-left">Tạo Sự Kiện</a>
               
                <div class="clearfix"></div>
                <div class="separator-h"></div>
                <!-- Row -->
                <div class="row">
                    <!-- Col sport slide -->
                    <div class="col-md-9">
                        <!-- Start Featured -->
                        {% set i = 0 %}
                        <div class="row">
                        {% for event in events %}
                          {% if i is divisible by(4) and i != 0 %}
                            </div>
                              <div class="row">
                          {% endif %}
                                   <div class="col-sm-3">
                                        <div class="widget">
                                        <a href="{{ path('DetailEvent', {'id':event.id }) }}" class="display-block bg-success innerAll text-center text-white"><i class="icon-desktop-play fa-5x"></i>
                                        </a>
                                        <div class="text-center innerAll">
                                            <a href="{{ path('DetailEvent', {'id':event.id }) }}" class="strong  ">{{ event.name }}</a>
                                        <div class="clearfix"></div>
                                        <small class="text-center"><i class="fa fa-clock-o"></i> 5:15</small>
                                        </div>
                                        </div>
                                 </div>
                         
                         {% set i = i + 1 %}
                        {% endfor %}
                        </div>
                        <!-- End Featured -->
                        <div class="clearfix"></div>
                        <div class="widget">
                            <div class="text-center innerAll inner-2x">
                                <h2 class="innerT">{{ events|length }} Events</h2>
                                <p class="lead">Join teamsport.</p>
                                <p class="lead"><a href="{{ path('AddEvent') }}" class="btn btn-primary">Tạo Sự Kiện</a>
                                </p>
                            </div>
                        </div>
                        
                        <div class="row" style="display:none">
                            <div class="col-sm-6 ">
                                <h4 class="innerTB margin-none icon-refresh-heart"><i></i>&nbsp; Most Viewed</h4>
                                <div class="widget innerAll margin-none">
                                    <a href="" class="display-block bg-inverse innerAll text-center"><i class="text-white icon-clipboard fa-5x"></i></a>
                                    <div class="text-center innerT">
                                        <a href="" class="strong text-inverse ">To Do List</a>
                                        <div class="clearfix"></div>
                                        <small class="text-center"><i class="fa fa-clock-o"></i> 5:15</small>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <h4 class="innerTB margin-none icon-cool"><i></i>&nbsp; Popular this Month</h4>
                                <div class="widget innerAll margin-none">
                                    <a href="" class="display-block bg-inverse innerAll text-center"><i class="text-white icon-clipboard fa-5x"></i></a>
                                    <div class="text-center innerT">
                                        <a href="" class="strong text-inverse ">To Do List</a>
                                        <div class="clearfix"></div>
                                        <small class="text-center"><i class="fa fa-clock-o"></i> 5:15</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Col -->
                    <div class="col-md-3">
                       
                        <div class="widget">
                            <div class="widget-body padding-none">
                                <a href="{{ path('ListEvent') }}"><h4 class="innerAll bg-primary text-white margin-bottom-none">Chọn Thể thao</h4></a>
                                <ul class="list-group list-group-1 margin-none borders-none">
                                  {% for category in categories %}
                                      {% if category.events|length > 0 %}
                                      <li class="list-group-item border-top-none">
                                        <a href="?sport={{ category.id }}">
                                            <span class="badge pull-right bg-primary ">{{ category.events|length }}</span><i class="fa fa-exclamation-circle"></i>&nbsp;
                                            {{ category.nom }}</a>
                                        </li>
                                       {% endif %}
                                      
                                      
                                  {% endfor %}
                                    
                                    
                                    
                                </ul>
                            </div>
                        </div>
                        
                    </div>
                </div>
            </div>
{% endblock %}
