{% extends 'SportimimiAdminBundle::base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('bundles/sportimimiadmin/css/plugins/dataTables.bootstrap.css') }}" rel="stylesheet">
{% endblock %}

{% block page_title %}
    API Clients
{% endblock %}

{% block main_content %}
    <div class="panel">
        <header class="panel-heading">API Client's list</header>
        <div class="panel-body">

            <p class="pull-right">
                <a href="{{ path('sportmimi_admin_client_new') }}" class="btn btn-success"><i class="fa fa-plus"></i> Create Client</a>
            </p>

            <div class="clearfix"></div>

            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover datatable">
                    <thead>
                    <tr>
                        <th>Name</th>
                        <th>Allowed Grant Types</th>
                        <th>Redirect URI's</th>
                        <th class="text-center">Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for entity in entities %}
                        <tr>
                            <td>{{ entity.name }}</td>
                            <td>{{ entity.allowedGrantTypes | join(', ') }}</td>
                            <td>{{ entity.redirectUris | join(', ') }}</td>
                            <td class="text-center ">
                                <a class="btn btn-info btn-xs" href="{{ path('sportmimi_admin_client_show', {'id': entity.id}) }}"><i class="fa fa-search-plus"></i> </a>
                                <a class="btn btn-warning btn-xs" href="{{ path('sportmimi_admin_client_edit', {'id': entity.id}) }}"><i class="fa fa-pencil"></i> </a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}


{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/sportimimiadmin/js/plugins/dataTables/jquery.dataTables.js') }}"></script>
    <script src="{{ asset('bundles/sportimimiadmin/js/plugins/dataTables/dataTables.bootstrap.js') }}"></script>

    <script type="text/javascript">
        $(document).ready(function() {
            $('.datatable').dataTable();
        });
    </script>
{% endblock %}