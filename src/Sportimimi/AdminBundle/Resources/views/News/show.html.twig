{% extends 'SportimimiAdminBundle::base.html.twig' %}

{% block page_title %}
    Show News: "{{ entity.title }}"
{% endblock %}

{% block main_content %}
    <div class="row">
        <div class="col-md-9">
            <div class="panel panel-info">
                <header class="panel-heading">News info</header>
                <div class="panel-body">
                    <table class="table table-condensed">
                        <tbody>
                        <tr>
                            <th>Title</th>
                            <td>{{ entity.title }}</td>
                        </tr>
                        <tr>
                            <th>Author</th>
                            <td>{{ entity.profile.nom }}</td>
                        </tr>
                        <tr>
                            <th>Content</th>
                            <td>{{ entity.content | raw }}</td>
                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <section class="panel">
                <header class="panel-heading">Actions</header>
                <div class="panel-body">
                    <a href="{{ path('sportmimi_admin_news_edit', {'id': entity.id}) }}" class="btn btn-primary btn-block">
                        <i class="fa fa-pencil"></i> Edit News
                    </a>
                    <a href="{{ path('sportmimi_admin_news_delete', {'id': entity.id}) }}" class="btn btn-danger btn-block">
                        <i class="fa fa-trash-o"></i> Delete News
                    </a>
                    <a href="{{ path('sportmimi_admin_news_index') }}" class="btn btn-info btn-block">
                        <i class="fa fa-list"></i> Back to list
                    </a>
                </div>
            </section>
        </div>
    </div>
{% endblock %}