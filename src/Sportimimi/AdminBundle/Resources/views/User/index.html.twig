{% extends 'SportimimiAdminBundle::base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('bundles/sportimimiadmin/css/plugins/dataTables.bootstrap.css') }}" rel="stylesheet">
{% endblock %}

{% block page_title %}
    Users
{% endblock %}

{% block main_content %}
    <div class="panel">
        <header class="panel-heading">User's list</header>
        <div class="panel-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover datatable">
                    <thead>
                    <tr>
                        <th>Username</th>
                        <th>Email</th>
                        <th>First name</th>
                        <th>Last name</th>
                        <th>Country</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for user in entities %}
                    <tr>
                        <td>{{ user.username }}</td>
                        <td>{{ user.email }}</td>
                        <td>{{ user.profile.nom }}</td>
                        <td>{{ user.profile.prenom }}</td>
                        <td>{{ user.profile.country }}</td>
                        <td class="text-right ">
                            <a class="btn btn-info btn-xs" href="{{ path('sportmimi_admin_user_show', {'id': user.id}) }}"><i class="fa fa-search-plus"></i> </a>
                            <a class="btn btn-warning btn-xs" href="{{ path('sportmimi_admin_users_edit', {'id': user.id}) }}"><i class="fa fa-pencil"></i> </a>
                        </td>
                    </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}


{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/sportimimiadmin/js/plugins/dataTables/jquery.dataTables.js') }}"></script>
    <script src="{{ asset('bundles/sportimimiadmin/js/plugins/dataTables/dataTables.bootstrap.js') }}"></script>

    <script type="text/javascript">
        $(document).ready(function() {
            $('.datatable').dataTable();
        });
    </script>
{% endblock %}