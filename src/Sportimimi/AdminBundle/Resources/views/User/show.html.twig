{% extends 'SportimimiAdminBundle::base.html.twig' %}

{% block page_title %}
    Show User: "{{ entity.username }}"
{% endblock %}

{% block main_content %}
<div class="row">
    <div class="col-md-9">
        <div class="panel panel-info">
            <header class="panel-heading">User info</header>
            <div class="panel-body">
                <table class="table table-condensed">
                    <tbody>
                    <tr>
                        <th>Username</th>
                        <td>{{ entity.username }}</td>
                    </tr>
                    <tr>
                        <th>Name</th>
                        <td>{{ entity.profile.nom }}</td>
                    </tr>
                    <tr>
                        <th>Last name</th>
                        <td>{{ entity.profile.prenom }}</td>
                    </tr>
                    <tr>
                        <th>Email</th>
                        <td>{{ entity.email }}</td>
                    </tr>
                    <tr>
                        <th>Country: </th>
                        <td>{{ entity.profile.country }}</td>
                    </tr>
                    <tr>
                        <th>Date of Birth</th>
                        <td>{{ entity.profile.dateNaissance |date('d/m/Y') }}</td>
                    </tr>
                    <tr>
                        <th>Sex</th>
                        <td>{{ entity.profile.sexe }}</td>
                    </tr>
                    <tr>
                        <th>Description</th>
                        <td>{{ entity.profile.description }}</td>
                    </tr>
                    <tr>
                        <th>Phone</th>
                        <td>{{ entity.profile.phone }}</td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <section class="panel">
            <header class="panel-heading">Actions</header>
            <div class="panel-body">
                <a href="{{ path('sportmimi_admin_users_edit', {'id': entity.id}) }}" class="btn btn-primary btn-block">
                    <i class="fa fa-pencil"></i> Edit User
                </a>
                <a href="{{ path('sportmimi_admin_users_index') }}" class="btn btn-info btn-block">
                    <i class="fa fa-list"></i> Back to list
                </a>
            </div>
        </section>
    </div>
</div>
{% endblock %}